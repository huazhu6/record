
page{
	height: 100%;
}
.son_{
	position: relative;
	height: 100%;
}
.son_>.list{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	margin: 10px;
	-webkit-box-shadow: 0 0 5px #999999;
	        box-shadow: 0 0 5px #999999;
	padding: 5px;
	border-radius: 10px;
}
.son_>.list>image{
	width: 200px;
	height: 100px;
}
.son_>.list>.title{
	overflow: hidden;
	white-space: nowrap;
	text-overflow: ellipsis;
	line-height: 100px;
}
.son_>.list>.num{
	line-height: 100px;
	width: 80px;
}
.son_>button{
	position: absolute;
	left: 0;
	bottom: 20px;
	z-index: 8;
	width: 100%;
}

